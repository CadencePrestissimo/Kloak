<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002F32"
    tools:context=".Timer">


    <LinearLayout
        android:layout_width="338dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="281dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#006064"
            android:contentDescription="@string/todo6734"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/time_" />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3D938B"
            android:padding="10dp"
            android:fontFamily="@font/cookie"
            android:text="6:00"
            android:textAlignment="center"
            android:textColor="@color/ic_launcher_background"
            android:textSize="70sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/controllerButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="70dp"
                android:background="@drawable/rounded2"
                android:gravity="center"
                android:onClick="controlTimer"
                android:text="@string/go132"
                android:textColor="@color/ic_launcher_background" />

            <Button
                android:id="@+id/pauseButton"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/rounded2"
                android:gravity="center"
                android:text="Stop"
                android:textColor="@color/ic_launcher_background" />

        </LinearLayout>



        <SeekBar
            android:id="@+id/timerSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:indeterminate="false"
            android:padding="5dp" />

    </LinearLayout>

</RelativeLayout>