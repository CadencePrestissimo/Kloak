<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#002F32"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/firstbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#002F32"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/todo1"
            app:srcCompat="@drawable/ic_baseline_add_alarm_24" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/todo1"
            app:srcCompat="@drawable/ic_baseline_timer_24" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/todo12"
            app:srcCompat="@drawable/ic_baseline_assignment_turned_in_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="455dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical">

        <AnalogClock
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:background="@drawable/rounded"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00acc1"
            app:srcCompat="@drawable/ic_baseline_add_circle_24"
            android:contentDescription="@string/todo" />

        <TextClock
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded"
            android:backgroundTint="#0097a7"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/cookie"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded"
            android:backgroundTint="#00838f"
            android:fontFamily="@font/cookie"
            android:padding="5dp"
            android:text="@string/_1_october_2020"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#006064"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/cookie"
                android:gravity="center"
                android:text="@string/_11_c"
                android:textAlignment="center"
                android:textColor="#FAF9F9"
                android:textSize="26sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:gravity="center"
                android:padding="10dp"
                app:srcCompat="@drawable/storm" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/cookie"
                android:gravity="center"
                android:text="@string/rainy"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>